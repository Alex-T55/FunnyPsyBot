{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "python DeepSeek_V3.py",
    "sleepApplication": false,
    "multiRegionConfig": {
      "asia-southeast1-eqsg3a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "envVars": {
      "BOT_TOKEN": "вставь_сюда_токен",
      "GOOGLE_SHEET_ID": "вставь_ID_таблицы",
      "CREDS_JSON": "{сюда_однострочный_JSON_из_creds.json}"
    }
  }
}
